             xmlns:local="clr-namespace:MainApp"
             StartupUri="LogWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/MainApp;component/Styles/Title.xaml"/>
